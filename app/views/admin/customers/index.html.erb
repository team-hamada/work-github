<div class="container">
  <div class="row">
    会員情報
  </div>


  <div>
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
          <td><% if @customer.is_deleted == false %>
           <span class="text-success">有効</span>
              <% else %>
           <span class="text-light">退会</span>
              <% end %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
