<div class="container mt-5">
 <div class="row">
    <div class="p-1 mb-1 bg-light text_dark">
     <h5><%= @customer.full_name %>さんの会員情報編集</h5>
    </div>
 </div>

 <div class="row">
    <div class="col-6 col-sm-2">会員ID</div>
     <div class="col-6 col-sm-2"><%= @customer.id %></div>
 </div>
 <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
 <div class="row mt-2">
    <div class="col-6 col-sm-2">氏名</div>
     <label><%= f.text_field :last_name %></label>
    <div class="col-6 col-sm-2">
      <label><%= f.text_field :first_name %></label>
    </div>
 </div>

 <div class="row">
    <div class="col-6 col-sm-2">フリガナ</div>
    <label><%= f.text_field :last_name_kana %></label>
    <div class="col-6 col-sm-2">
    <label><%= f.text_field :first_name_kana %></label>
    </div>
 </div>
 <div class="row">
     <div class="col-6 col-sm-2">郵便番号</div>
     <label><%= f.text_field :postal_code %></label>
 </div>
 <div class="row">
     <div class="col-6 col-sm-2">住所</div>
     <label><%= f.text_field :address %></label>
 </div>
 <div class="row">
     <div class="col-6 col-sm-2">電話番号</div>
     <label><%= f.text_field :telephone_number %></label>
 </div>
 <div class="row">
     <div class="col-6 col-sm-2">メールアドレス</div>
     <label><%= f.email_field :email, autofocus: true, autocomplete: "email" %></label>
 </div>

 <div class="row">
     <div class="col-6 col-sm-2">会員ステータス</div>
     <%= f.radio_button :is_deleted, 0, checked: false %>有効　<%= f.radio_button :is_deleted, 1 %>退会
 </div>

 <div class="row mt-4">
  <div class="col-6 col-sm-2"></div>
  <div class="col-6 col-sm-2"><%= f.submit '変更を保存', class: "btn btn-success" %></div>
 </div>

 <% end %>
</div>
