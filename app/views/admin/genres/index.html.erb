<div class="container">
    <h2>ジャンル一覧・追加</h2>
    <%= form_with medel: @genres do |f| %>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class="mt-5"><%= f.label :name, "ジャンル名" %></div>
      <div class="mt-5 ml-3 col-3 "><%= f.text_field :name, autofocus: true, autocomplete: "genres", placeholder: "ジャンル名", class:"form-control" %></div>
      <div class="mt-5 ml-3 col-3"><%= f.submit "新規登録", class:"btn btn-success col-5" %></div>
    </div>
  </div>
    <% end %>
    
    
    <div class='container px-1 px-sm-0 mt-5'>
    <div class='row'>
      <div class="col-3">
        <table class="table table-hover table-inverse">
            <thead>
                <tr>
                    <th>ジャンル</th>
                    <th></th>
                    <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
                <% @genres.each do |genre| %>
                    <tr>
                        <td><%= genre.name %></td>
                        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    　</div>
    </div>
    </div>
</div>