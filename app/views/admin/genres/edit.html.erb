<div class="container">
    <h2>ジャンル編集</h2>
  <div class="row">
    <div class= "col-md-6 mt-5">
      <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
      <table class="table mt-5">
         <tr>
           <td>
              <%= f.label :name, "ジャンル名" %>
           </td>
           <td>
              <%= f.text_field :name, class: "form-control" %>
           </td>
           <td>
              <%= f.submit "変更を保存", class: "btn btn-success" %>
           </td>
         </tr>
       </table>
      <% end %>
    </div>
  </div>
</div>