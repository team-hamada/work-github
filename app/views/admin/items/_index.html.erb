<div class="col-8">
  
  <table class='table table-striped'>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id  %></td>
          <td><u><%= link_to item.name ,admin_item_path(item.id), class: "text-dark"  %></u></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_active == false %>
              <span class="text-success"><strong>販売中</strong></span>
            <% else %>
              <span class="text-secondary"><strong>販売停止中</strong></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
</div>