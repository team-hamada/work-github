<div class='container mt-5'>
  
  <div class='row mb-3'>
    <div class= "h1">商品詳細</div>
  </div>

   <div class="row mb-3">
     <div class="col-3">
       <%= image_tag @item.get_image(200, 200) %>
     </div>

     <div class="col">
        <table class="table table-bordered">
        <tbody>
          <tr>
            <th>商品名</th>
            <th><%= @item.name %></th>
          </tr>
          <tr>
            <th>商品説明</th>
            <th><%= @item.introduction %></th>
          </tr>
          <tr>
            <th>ジャンル</th>
            <th><%= @genre.name %></th>
          </tr>
          <tr>
            <th>税込価格<br>(税抜価格)</th>
            <th><%= (@item.price * 1.1).round(0) %>(<%= @item.price %>)円</th>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <th>
              <% if @item.is_active == false %>
                <span class="text-success">販売中</span>
              <% else %>
                <span class="text-secondary">販売停止中</span>
              <% end %>
            </th>
          </tr>
        </tbody>
      </table>
     </div>
   </div>
   
  <div class="row">
      <div class="mx-auto">
        <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
      </div>
  </div>
  
</div>