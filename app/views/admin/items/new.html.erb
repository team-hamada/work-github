<div class="container">
  <div class="row">
    <div class="mx-auto">
      
      <div class="my-4 h4">商品新規登録</div>
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
        <div class="form-group">
          <label>商品画像</label>
          <%= f.file_field :image, accept: "image/*", id: "image", class: "form-control-file image" %>
        </div>
        <div class="form-group">
          <label>商品名</label>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <label>商品説明</label>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <label>ジャンル名</label>
          <%= f.collection_select :genre_id, @genres, :id, :name, {prompt: "--選択してください--"}, {class: "form-control input-sm"} %>
        </div>
        <div class="form-group">
          <label>税抜価格</label>
          <%= f.number_field :price, class: "form-control" %>円
        </div>
        <div class="form-group">
          <label>販売ステータス</label>
          <%= f.radio_button :is_active, 0, checked: true %>販売中 <%= f.radio_button :is_active, 1 %>販売停止中
        </div>
        <div class="form-group">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>