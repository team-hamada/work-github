<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h2>管理者ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div>
          メールアドレス<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          パスワード　　<%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-sm btn-primary" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>


