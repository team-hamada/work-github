<div class="container">
    <h2>注文情報確認</h2>
    <div class="row">
        <div class="col">
            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>商品名</th>
                        <th>単価（税込）</th>
                        <th>数量</th>
                        <th>小計</th>
                    </tr>
                </thead>
                <% @total=0 %>
                <% @cart_items.each do |cart| %>
                <tbody>
                    <tr>
                        <td><%= cart.item.name %></td>
                        <td><%= (cart.item.price).to_s(:delimited) %></td>
                        <td><%= cart.quantity %></td>
                        <td><%= (cart.item.price*cart.quantity).to_s(:delimited) %></td>
                        <% @total += cart.item.price*cart.quantity %>
                    </tr>
                </tbody>
                <% end %>
            </table>
        </div>
        <div class="col">
            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>送料</th>
                        <th>商品合計</th>
                        <th>請求金額</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>800</td>
                        <td><%= @total %></td>
                        <td><%= @total + 800 %></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <strong>支払い方法</strong>
        <div class="col">
            <%= @order.payment_method_i18n %>
        </div>
    </div>
    <div class="row">
        <strong>お届け先</strong>
        <div class="col">
            〒<%= @order.postal_code %>　<%= @order.address %>　<%= @order.name %>
        </div>
    </div>
    <%= form_with model: @order, url: orders_path, local: true do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :customer_id, value: current_customer.id %>
        <%= f.hidden_field :shipping_cost, value: 800 %>
        <%= f.hidden_field :payment_method %>
        <%= f.hidden_field :postal_code %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :total_payment, value: @total + 800 %>
        <%= f.submit "注文を確定する" %>
    <% end %>
</div>

