<div class="container mt-5">
 <div class="row">
  <div class="p-1 mb-1 text-dark bg-light">
   <h5 class=".col-lg-8 font-weight-blod">マイページ</h5>
  </div>
 </div>
 <table class="table table-bordered">
   <strong>登録情報</strong> <%= link_to "編集する", '/customers/information/edit', class: "btn btn-success" %>
   <tbody class="mb-5">
    <tr>
     <th class="table-secondary">氏名</th>
      <td><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
     <th class="table-secondary">カナ</th>
      <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
     <th class="table-secondary">郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
     <th class="table-secondary">住所</th>
      <td><%= @customer.address %></td>
    </tr>
　   <th class="table-secondary">電話番号</th>
　    <td><%= @customer.telephone_number %></td>
　  <tr>
　   <th class="table-secondary">メールアドレス</th>
　    <td><%= @customer.email %></td>
　  </tr>
 </tbody>
</table>

  <strong>配送先</strong> <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
  <strong>注文履歴</strong> <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>

</div>