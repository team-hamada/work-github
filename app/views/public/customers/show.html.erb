<div class="container mt-5">
 <div class="row mb-4">
  <div class="p-1 mb-1 bg-light text_dark">
   <h5>マイページ</h5>
  </div>
 </div>
 </div>

 <div class="container ml-5">
  <div class="row">
   <div class="col-1">
    <strong>登録情報</strong>
   </div>
   <div><%= link_to "編集する", customers_information_edit_path, class: "btn btn-success w-15px" %></div>
  </div>
 </div>

 <div class="container ml-5">
  <table class="table table-bordered">
   <tbody>
    <tr>
     <th class="table-secondary">氏名</th>
      <td><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
     <th class="table-secondary">カナ</th>
      <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
     <th class="table-secondary">郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
     <th class="table-secondary">住所</th>
      <td><%= @customer.address %></td>
    </tr>
　   <th class="table-secondary">電話番号</th>
　    <td><%= @customer.telephone_number %></td>
　  <tr>
　   <th class="table-secondary">メールアドレス</th>
　    <td><%= @customer.email %></td>
　  </tr>
 </tbody>
</table>
</div>

<div class="container ml-5">
 <div class="row">
  <div class="col-1"><strong>配送先</strong></div>
  <div><%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %></div>
 </div>
</div>
<div class="container ml-5 mt-3">
 <div class="row">
  <div class="col-1"><strong>注文履歴</strong></div>
  <div><%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></div>
 </div>
</div>



