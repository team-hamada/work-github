<div class="container mt-5">
  <div class="row">
    
  <div class="col-3 mr-3">
    <%#= render "public/homes/genre", genres: Genre.all %>
    <%= render "admin/genres/index", genres: Genre.all %>
  </div>
  
  <div class="col">
    <div class="row">
      <h1 class="form-check-inline"><strong>
        <% if @genre == nil %>
          商品一覧
        <% else %>
          <%= @genre.name %>一覧
        <% end %>
      </strong></h1>
      <h4 class="form-check-inline">
        (全<%= @sale_items.count %>件)
      </h4>
    </div>
    
    <div class="row">
      <%= render "public/items/index", items: @items %>
      <div class="mt-5">
        <%= paginate @items %>
      </div>
    </div>
  </div>
  
  </div>
</div>