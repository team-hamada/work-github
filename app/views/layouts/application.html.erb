<!DOCTYPE html>
<html>
  <head>
    <title>WorkGithub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class="sticky-top">
    <div class="border-bottom">
    <div class="navbar navbar-expand-md navbar-dark bg-white">
        <div class="border" style="padding:10px;">
          <%= link_to 'ながのCAKE', root_path %>
        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon bg-dark"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
          <% if customer_signed_in? %>
            <li class="nav-item" style="padding:10px;">
              <%= link_to "マイページ", customers_my_page_path, class: 'nav-link text-dark border' %>
            </li>
            <li class="nav-item" style="padding:10px;">
              <%= link_to "商品一覧", itemes_path, class: 'nav-link text-dark border' %>
            </li>
            <li class="nav-item" style="padding:10px;">
              <%= link_to "カート", cart_items_path, class: 'nav-link text-dark border' %>
            </li>
            <li class="nav-item" style="padding:10px;">
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'nav-link text-dark border' %>
            </li>
            <% elsif admin_signed_in? %>
            <li class="nav-item" style="padding:10px;">
              <%= link_to "商品一覧", admin_items_path, class: 'nav-link text-dark border' %>
            </li>
            <li class="nav-item" style="padding:10px;">
              <%= link_to "会員一覧", admin_customers_path, class: 'nav-link text-dark border' %>
            </li>
            <li class="nav-item" style="padding:10px;">
              <%= link_to "注文履歴一覧", admin_items_path, class: 'nav-link text-dark border' %>
            </li>
            <li class="nav-item" style="padding:10px;">
              <%= link_to "ジャンル一覧", admin_genres_path, class: 'nav-link text-dark border' %>
            </li>
              <li class="nav-item" style="padding:10px;">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-dark border' %>
              </li>
            <% else %>
            <li class="nav-item" style="padding:10px;">
              <%= link_to "About", about_path, class: 'nav-link text-dark border' %>
            </li>
            <li class="nav-item" style="padding:10px;">
              <%= link_to "商品一覧", itemes_path, class: 'nav-link text-dark border' %>
            </li>
            <li class="nav-item" style="padding:10px;">
              <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link text-dark border' %>
            </li>
            <li class="nav-item" style="padding:10px;">
              <%= link_to "ログイン", new_customer_session_path, class: 'nav-link text-dark border' %>
            </li>
            <% end %>
          </ul>
      </div>
      </div>
    </div>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
